<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="self"
            type="com.protone.seen.PickMusicActivity" />


        <import type="com.protone.seen.PickMusicActivity.Event" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/addMB_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_icon"
            android:background="@color/blue_1"
            android:drawableStart="@drawable/ic_baseline_search_24_white"
            android:hint="@string/search"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:paddingStart="@dimen/icon_padding_mid"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            tools:ignore="LabelFor" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addMB_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/addMB_leave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addMB_search" />

        <ImageView
            android:id="@+id/addMB_leave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_icon_p"
            android:background="@drawable/background_ripple_blue"
            android:contentDescription="@string/action"
            android:onClick="@{()-> self.offer(Event.Finished)}"
            android:padding="@dimen/icon_padding_lite"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/addMB_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_icon_p"
            android:background="@drawable/background_ripple_blue"
            android:contentDescription="@string/action"
            android:onClick="@{()-> self.offer(Event.Confirm)}"
            android:padding="@dimen/icon_padding_lite"
            android:src="@drawable/ic_baseline_check_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_elevation"
            android:background="@color/red_2"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
