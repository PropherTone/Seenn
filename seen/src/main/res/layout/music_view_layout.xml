<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="self"
            type="com.protone.seen.MusicViewSeen" />

        <import type="com.protone.seen.MusicViewSeen.MusicEvent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.protone.seen.customView.musicPlayer.MusicPlayerViewFull
            android:id="@+id/musicPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/toolBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_width="@dimen/small_Icon"
            android:layout_height="@dimen/small_Icon"
            android:layout_marginStart="@dimen/back_margin"
            android:layout_marginTop="@dimen/back_margin"
            android:contentDescription="@string/action"
            android:onClick="@{()->self.offer(MusicEvent.Finish)}"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_round_arrow_left__white_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
