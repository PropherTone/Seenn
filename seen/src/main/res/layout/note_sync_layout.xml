<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="self"
            type="com.protone.seen.NoteSyncSeen" />

        <import type="com.protone.seen.NoteSyncSeen.NoteSync"/>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="@{()->self.offer(NoteSync.Send)}"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <Button
            android:onClick="@{()->self.offer(NoteSync.Receive)}"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <com.protone.seen.customView.musicPlayer.MusicPlayerViewFull
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>