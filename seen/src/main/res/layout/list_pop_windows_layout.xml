<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/icon_padding">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/huge_icon"
            android:background="@color/white"
            android:overScrollMode="never"
            android:padding="@dimen/small_elevation"
            app:layout_constraintBottom_toTopOf="@id/list_confirm" />

        <ImageView
            android:id="@+id/list_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_icon"
            android:background="@drawable/background_ripple_blue"
            android:contentDescription="@string/action"
            android:padding="@dimen/icon_padding_lite"
            android:src="@drawable/ic_baseline_check_24_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
