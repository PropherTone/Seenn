<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        app:layoutDescription="@xml/music_player_layout_scene">

        <com.protone.seen.customView.SameSizeImageView
            android:id="@+id/music_cover_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/music_cover_back_round"
            android:contentDescription="@string/icon"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/settle_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6"/>

        <com.protone.seen.customView.SameSizeImageView
            android:id="@+id/music_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/music_cover_back_round"
            android:contentDescription="@string/icon"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/settle_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <View
            android:id="@+id/settle_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@id/music_cover" />

        <com.protone.seen.customView.AutoSizeTextView
            android:id="@+id/music_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/model_music"
            android:textStyle="bold"
            android:letterSpacing="0.06"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@id/music_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settle_cover"
            app:layout_constraintWidth_percent="0.46" />

        <com.protone.seen.customView.AutoSizeTextView
            android:id="@+id/music_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="@string/music_bucket_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/music_name"
            app:layout_constraintWidth_percent="0.5" />

        <View
            android:id="@+id/settle_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/music_progress"
            app:layout_constraintHeight_percent="0.06" />

        <com.protone.seen.customView.ColorfulProgressBar
            android:id="@+id/music_progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/settle_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.88" />

        <View
            android:id="@+id/settle_progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/music_control"
            app:layout_constraintHeight_percent="0.012" />

        <com.protone.seen.customView.SameSizeImageView
            android:id="@+id/music_previous"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_round_arrow_left__white_24"
            app:layout_constraintBottom_toBottomOf="@id/music_control"
            app:layout_constraintEnd_toStartOf="@id/music_control"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintTop_toTopOf="@id/music_control"
            app:layout_constraintWidth_percent="0.2" />

        <com.protone.seen.customView.SameSizeImageView
            android:id="@+id/music_control"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_round_on__white_24"
            app:layout_constraintBottom_toTopOf="@id/settle_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <com.protone.seen.customView.SameSizeImageView
            android:id="@+id/music_next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_round_arrow_right_white_24"
            app:layout_constraintBottom_toBottomOf="@id/music_control"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toEndOf="@id/music_control"
            app:layout_constraintTop_toTopOf="@id/music_control"
            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/settle_down"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.06" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
