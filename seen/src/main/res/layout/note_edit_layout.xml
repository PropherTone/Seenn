<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="self"
            type="com.protone.seen.NoteEditSeen" />

        <import type="com.protone.seen.NoteEditSeen.NoteEditEvent" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/noteEdit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/noteEdit_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/huge_icon"
                    android:contentDescription="@string/icon"
                    android:onClick="@{()->self.offer(NoteEditEvent.PickIcon)}"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/toolbar_back"
                        android:layout_width="@dimen/small_Icon"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:contentDescription="@string/action"
                        android:onClick="@{()->self.offer(NoteEditEvent.Finish)}"
                        android:paddingTop="@dimen/main_margin"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/main_margin"
                        android:src="@drawable/ic_baseline_arrow_back_24_white" />

                    <ImageView
                        android:id="@+id/toolbar_confirm"
                        android:layout_width="@dimen/small_Icon"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:contentDescription="@string/action"
                        android:onClick="@{()->self.offer(NoteEditEvent.Confirm)}"
                        android:paddingStart="0dp"
                        android:paddingTop="@dimen/main_margin"
                        android:paddingEnd="@dimen/main_padding"
                        android:paddingBottom="@dimen/main_margin"
                        android:src="@drawable/ic_baseline_check_24" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/noteEdit_richView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:layout_constraintBottom_toTopOf="@id/noteEdit_tool"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <com.protone.seen.customView.richText.RichNoteView
                android:id="@+id/noteEdit_richNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.core.widget.NestedScrollView>

        <ScrollView
            android:id="@+id/noteEdit_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/glass"
            android:paddingTop="@dimen/main_padding"
            android:paddingBottom="@dimen/main_padding"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.setBold()}"
                    android:src="@drawable/ic_baseline_format_bold_24_black" />

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.setItalic()}"
                    android:src="@drawable/ic_baseline_format_italic_24_black" />

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.setSize()}"
                    android:src="@drawable/ic_baseline_format_size_24_black" />

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.setUnderlined()}"
                    android:src="@drawable/ic_baseline_format_underlined_24_black" />

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.setStrikethrough()}"
                    android:src="@drawable/ic_baseline_strikethrough_s_24_black" />

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.setColor()}"
                    android:padding="@dimen/main_padding"
                    android:src="@color/black" />

                <ImageView
                    android:layout_width="@dimen/small_Icon"
                    android:layout_height="@dimen/small_Icon"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/action"
                    android:onClick="@{()->self.insertImage()}"
                    android:padding="@dimen/texts_padding"
                    android:src="@drawable/ic_baseline_image_24_black" />

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
