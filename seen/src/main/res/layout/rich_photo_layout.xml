<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rich_photo_tv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rich_photo_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:contentDescription="@string/photo" />

        <TextView
            android:id="@+id/rich_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:paddingTop="@dimen/texts_padding"
            android:paddingBottom="@dimen/texts_padding"
            android:text="@string/test_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_text" />

        <TextView
            android:id="@+id/rich_photo_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_black"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:paddingTop="@dimen/texts_padding"
            android:paddingBottom="@dimen/texts_padding"
            android:text="@string/test_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_text" />

    </RelativeLayout>

</layout>
