<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.protone.worker">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- <uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->
    <!-- <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" /> -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name="com.protone.worker.com.protone.seenn.SeennApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Seenn"
        tools:ignore="DataExtractionRules">
        <activity
            android:name="com.protone.worker.TestActivity"
            android:exported="true">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity android:name="com.protone.worker.activity.NoteActivity" />
        <activity android:name="com.protone.worker.activity.PictureBoxActivity" />
        <activity android:name="com.protone.worker.activity.GalleyActivity" />
        <activity android:name="com.protone.worker.activity.MusicActivity" />
        <activity android:name="com.protone.worker.activity.AddBucketActivity" />
        <activity android:name="com.protone.worker.activity.NoteEditActivity" />
        <activity android:name="com.protone.worker.activity.NoteViewActivity" />
        <activity android:name="com.protone.worker.activity.GalleyViewActivity" />
        <activity android:name="com.protone.worker.activity.PickMusicActivity" />
        <activity android:name="com.protone.worker.activity.UserConfigActivity" />
        <activity android:name="com.protone.worker.activity.LogActivity" />
        <activity android:name="com.protone.worker.activity.MusicViewActivity" />
        <activity android:name="com.protone.worker.activity.GalleySearchActivity" />
        <activity
            android:name="com.protone.worker.activity.MainActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="com.protone.worker.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.protone.worker.service.MusicService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.protone.worker.service.WorkService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="com.protone.worker.broadcast.MusicReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="PlayMusic" />
                <action android:name="PauseMusic" />
                <action android:name="NextMusic" />
                <action android:name="PreviousMusic" />
                <action android:name="FinishMusic" />
                <action android:name="RefreshNotification" />
                <action android:name="ControlMusicCurrent" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.protone.worker.broadcast.WorkReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="UPDATE_MUSIC_BUCKET" />
                <action android:name="UPDATE_MUSIC" />
                <action android:name="UPDATE_GALLEY" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.protone.worker.broadcast.ApplicationBroadCast"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="MUSIC" />
                <action android:name="FNINSH" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.protone.worker.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>