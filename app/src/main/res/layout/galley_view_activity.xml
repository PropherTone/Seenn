<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.protone.seenn.activity.GalleyViewActivity" />

        <import type="com.protone.worker.viewModel.GalleyViewViewModel.GalleyViewEvent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:elevation="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/galleyV_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/galleyV_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/small_elevation"
            android:visibility="invisible">

            <TextView
                android:id="@+id/galleyV_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_icon_p"
                android:background="@color/foreDark_1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:paddingStart="@dimen/action_icon_p"
                android:paddingEnd="@dimen/action_icon_p"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/galleyV_back"
                android:layout_width="@dimen/action_icon_p"
                android:layout_height="@dimen/action_icon_p"
                android:contentDescription="@string/action"
                android:onClick="@{()->activity.finish()}"
                android:padding="@dimen/icon_padding_mid"
                android:src="@drawable/ic_baseline_arrow_left_24_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/galleyV_action"
                android:layout_width="@dimen/action_icon_p"
                android:layout_height="@dimen/action_icon_p"
                android:contentDescription="@string/action"
                android:onClick="@{()->activity.sendViewEvent(GalleyViewEvent.SetNote.INSTANCE)}"
                android:padding="@dimen/icon_padding_mid"
                android:src="@drawable/ic_baseline_more_horiz_24_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/galleyV_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foreDark_1"
                android:padding="@dimen/main_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_text"
                app:layout_constraintBottom_toTopOf="@+id/galleyV_size" />

            <TextView
                android:id="@+id/galleyV_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foreDark_1"
                android:padding="@dimen/main_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_text"
                app:layout_constraintBottom_toTopOf="@+id/galleyV_cato" />

            <LinearLayout
                android:id="@+id/galleyV_cato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foreDark_1"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/galleyV_type">

                <TextView
                    android:id="@+id/galleyV_cato_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/main_padding"
                    android:text="@string/cato"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/galleyV_cato_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />

                </HorizontalScrollView>

            </LinearLayout>

            <TextView
                android:id="@+id/galleyV_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foreDark_1"
                android:padding="@dimen/main_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_text"
                app:layout_constraintBottom_toTopOf="@+id/galleyV_links" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galleyV_links"
                android:layout_width="match_parent"
                android:layout_height="@dimen/huge_icon"
                android:background="@color/foreDark_1"
                android:overScrollMode="never"
                android:padding="@dimen/main_padding"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/black_gradient_left"
                android:contentDescription="@string/action"
                android:src="@drawable/ic_round_arrow_left__white_24"
                app:layout_constraintBottom_toTopOf="@+id/galleyV_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/galleyV_back"
                app:layout_constraintWidth_percent="0.12" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/black_gradient_right"
                android:contentDescription="@string/action"
                android:src="@drawable/ic_round_arrow_right_white_24"
                app:layout_constraintBottom_toTopOf="@+id/galleyV_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/galleyV_action"
                app:layout_constraintWidth_percent="0.12" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
